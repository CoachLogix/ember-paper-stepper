<div class="md-stepper {{if isActive "md-active"}}">
  {{#if vertical}}
    <md-steppers-header class="md-steppers-header md-steppers-vertical">
      <button class="md-stepper-indicator {{if isActive "md-active"}} {{if isCompleted "md-completed"}} {{if hasError "md-error"}} {{if showOptional "md-stepper-optional"}}" disabled={{isButtonDisabled}}
        onclick={{if linear null (action goTo stepNumber)}}>
        <div class="md-stepper-indicator-wrapper">

          {{#if hasError}}
            <div class="md-stepper-error-indicator">
              {{paper-icon "warning"}}
            </div>
          {{else}}
            <div class="md-stepper-number">
              {{#if isCompleted}}
                {{paper-icon class="md-stepper-icon" icon="check"}}
              {{else}}
                <span>{{stepNumberLabel}}</span>
              {{/if}}
            </div>
          {{/if}}

          <div class="md-stepper-title">
            <span>{{label}}</span>
            {{#if hasError}}
              <small class="md-stepper-error-message">
                {{error}}
              </small>
            {{else}}
              {{#if optional}}
                <small>{{optionalLabel}}</small>
              {{/if}}
            {{/if}}
          </div>

        </div>
      </button>
    </md-steppers-header>
  {{/if}}

  {{#if isActive}}
    <md-steppers-scope class="layout-column md-steppers-scope">
      {{yield (hash
        body=(component bodyComponent)
        actions=(component actionsComponent nextStep=nextStep previousStep=previousStep)
      )}}
    </md-steppers-scope>
  {{/if}}

</div>
